@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}


<div class="container">
    <h1>Register</h1>
    <p>Please fill in this form to create an account.</p>
    @Html.ValidationSummary()
<form asp-action="Register" asp-controller="User" method="post">

    <div class="logindiv">

        <div class="form-group col-sm-12">
            <label for="FirstName" class="col-lg-3 control-label"><b>FirstName</b></label>
            <br>
            <input type="text" placeholder="Enter FirstName" name="FirstName" id="FirstName" required>
        </div>

        <div class="form-group col-sm-12">
            <label for="LastName"><b>LastName</b></label>
            <br>
            <input type="text" placeholder="Enter LastName" name="LastName" id="LastName" required>

        </div>

        <div class="form-group col-sm-12">

            <label for="Email"><b>Email</b></label>
            <br>
            <input type="email" placeholder="Enter Email" name="email" id="email" required>
        </div>


        <div class="form-group col-sm-12">

            <label for="psw"><b>Password</b></label>
            <br>
            <input type="password" placeholder="Enter Password" name="Password" id="Password" required>

        </div>

    </div>

    <div class="col-sm-12 btn-submit">
        <button type="submit" class="btn btn-success">Register</button>

    </div>
    <div class="container signin">
        <p>Already have an account? <a href="Home/Login">Sign in</a>.</p>
    </div>
</form>

   